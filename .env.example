# Soccer Film Analysis - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soccer_analysis
DB_USER=postgres
DB_PASSWORD=your_password_here

# Full connection string (optional - overrides individual settings)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/soccer_analysis

# ============================================
# Detection Model Settings
# ============================================
# Use local YOLO models (no API key required)
USE_LOCAL_MODELS=true

# YOLO model size: nano, small, medium, large, xlarge
# nano = fastest, xlarge = most accurate
YOLO_MODEL_SIZE=small

# ============================================
# Roboflow API (Optional - only needed if USE_LOCAL_MODELS=false)
# Get your key at: https://app.roboflow.com/
# ============================================
ROBOFLOW_API_KEY=

# ============================================
# Application Settings
# ============================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Video processing settings
DEFAULT_ANALYSIS_DEPTH=standard  # quick, standard, deep
MAX_PROCESSING_THREADS=4
ENABLE_GPU=true

# ============================================
# Paths (relative to project root)
# ============================================
VIDEO_INPUT_DIR=data/videos
OUTPUT_DIR=data/outputs
MODELS_DIR=data/models
LOGS_DIR=logs

# ============================================
# Detection Thresholds
# ============================================
PLAYER_CONFIDENCE_THRESHOLD=0.3
BALL_CONFIDENCE_THRESHOLD=0.25
PITCH_CONFIDENCE_THRESHOLD=0.5

# ============================================
# GUI Settings
# ============================================
WINDOW_WIDTH=1600
WINDOW_HEIGHT=900
THEME=dark  # light, dark
