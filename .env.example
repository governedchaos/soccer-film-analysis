# Soccer Film Analysis - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soccer_analysis
DB_USER=postgres
DB_PASSWORD=your_password_here

# Full connection string (optional - overrides individual settings)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/soccer_analysis

# ============================================
# Detection Model Settings
# ============================================
# All detection runs locally using YOLOv8 - no API key required

# YOLO model size: nano, small, medium, large, xlarge
# nano = fastest (~3MB), xlarge = most accurate (~130MB)
# Models are downloaded automatically on first run
YOLO_MODEL_SIZE=small

# ============================================
# Application Settings
# ============================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Video processing settings
DEFAULT_ANALYSIS_DEPTH=standard  # quick, standard, deep
MAX_PROCESSING_THREADS=4

# GPU acceleration (auto-detected if not set)
# true = use GPU if available, false = force CPU
ENABLE_GPU=true

# ============================================
# Paths (relative to project root)
# ============================================
VIDEO_INPUT_DIR=data/videos
OUTPUT_DIR=data/outputs
MODELS_DIR=data/models
LOGS_DIR=logs
VIDEO_CACHE_DIR=video_cache

# ============================================
# Detection Thresholds
# ============================================
# Player detection confidence (0.0 - 1.0)
PLAYER_CONFIDENCE_THRESHOLD=0.3

# Ball detection confidence (lower = more sensitive)
BALL_CONFIDENCE_THRESHOLD=0.15

# Pitch line detection confidence
PITCH_CONFIDENCE_THRESHOLD=0.5

# ============================================
# GUI Settings
# ============================================
WINDOW_WIDTH=1600
WINDOW_HEIGHT=900
THEME=dark  # light, dark

# ============================================
# Cloud Sync (Optional)
# ============================================
# Local folder for backups
BACKUP_DIR=backups

# Google Drive (optional - leave empty to disable)
# GOOGLE_DRIVE_FOLDER_ID=your_folder_id
